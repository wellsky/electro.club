<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:defaultValue="device"
        app:entries="@array/settings_theme_entries"
        app:entryValues="@array/settings_theme_values"
        app:key="settings_theme"
        app:title="@string/settings_theme_title"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false"
        />

    <ListPreference
        app:defaultValue="yandex"
        app:entries="@array/settings_map_type_entries"
        app:entryValues="@array/settings_map_type_values"
        app:key="settings_map"
        app:title="@string/settings_map_title"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false"
        />


</PreferenceScreen>